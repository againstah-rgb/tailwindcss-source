{
  "name": "tailwindcss-source",
  "version": "0.0.1",
  "packageManager": "pnpm@10.15.0",
  "description": "A TailwindCss v4 `@source` plugin for monorepo projects.",
  "author": "AgainstEcho",
  "license": "MIT",
  "homepage": "https://github.com/AgainstEcho/tailwindcss-source#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AgainstEcho/tailwindcss-source.git"
  },
  "bugs": {
    "url": "https://github.com/AgainstEcho/tailwindcss-source/issues"
  },
  "keywords": [
    "tailwindcss",
    "source",
    "vite",
    "vite-plugin"
  ],
  "exports": {
