{
  "name": "tailwindcss-source",
  "version": "0.0.4",
  "description": "A TailwindCss v4 `@source` plugin for monorepo projects.",
  "author": "AgainstEcho",
  "license": "MIT",
  "homepage": "https://github.com/againstah-rgb/tailwindcss-source#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/againstah-rgb/tailwindcss-source.git"
  },
  "bugs": {
    "url": "https://github.com/againstah-rgb/tailwindcss-source/issues"
  },
  "keywords": [
    "tailwindcss",
    "source",
    "vite",
    "vite-plugin"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "pnpm unbuild --stub",
    "build": "unbuild",
    "prepublishOnly": "npm run build",
    "clean": "pnpx rimraf -g **/node_modules pnpm-lock.yaml",
    "reinstall": "pnpm clean && pnpm install",
    "lint": "eslint",
    "lint:fix": "eslint --fix"
  },
  "peerDependencies": {
    "vite": ">=6.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@manypkg/get-packages": "^3.1.0",
    "@tailwindcss/vite": "^4.1.12",
    "@types/node": "^24.3.1",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "unbuild": "^3.6.1"
  }
}
